<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:focusable="true"
    android:clickable="true"
    android:focusableInTouchMode="true"
    android:background="@drawable/module_store_grid_item_background"
    android:padding="@dimen/dp_20">

    <ImageView
        android:id="@+id/app_grid_icon"
        android:layout_width="@dimen/dp_110"
        android:layout_height="@dimen/dp_110"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/module_store_grid_item_background"/>
    <RelativeLayout
        android:layout_toRightOf="@id/app_grid_icon"
        android:layout_marginTop="@dimen/dp_15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/app_grid_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textSize="@dimen/sp_20"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_20"
            android:gravity="center_vertical"
            />
        <TextView
            android:id="@+id/app_grid_version"
            android:layout_below="@id/app_grid_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_20"
            android:paddingRight="@dimen/dp_20"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_5"
            android:background="@drawable/module_store_grid_item_version"
            android:textSize="@dimen/sp_16"
            android:text="@string/module_store_app_name"
            android:gravity="center_vertical"
            />
    </RelativeLayout>

</RelativeLayout>
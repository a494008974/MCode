<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/module_store_background"
    tools:context="com.mylove.store.DetailActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_150"
        android:paddingRight="@dimen/dp_150"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <ImageView
                android:id="@+id/app_icon"
                android:layout_width="@dimen/dp_150"
                android:layout_height="@dimen/dp_150"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/dp_10"
                android:background="@drawable/module_store_grid_item_background"/>
            <RelativeLayout
                android:layout_toRightOf="@id/app_icon"
                android:layout_marginRight="@dimen/dp_20"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/app_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:textSize="@dimen/sp_32"
                    android:text="@string/module_store_app_name"/>
                <LinearLayout
                    android:id="@+id/app_info_one"
                    android:layout_below="@id/app_title"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:drawableLeft="@drawable/module_store_item_activated"
                        android:text="@string/module_store_app_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/module_store_item_activated"
                        android:text="@string/module_store_app_name"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/app_info_two"
                    android:layout_below="@id/app_info_one"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:drawableLeft="@drawable/module_store_item_activated"
                        android:text="@string/module_store_app_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:drawableLeft="@drawable/module_store_item_activated"
                        android:text="@string/module_store_app_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/dp_20"
                        android:drawableLeft="@drawable/module_store_item_activated"
                        android:text="@string/module_store_app_name"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/module_store_item_activated"
                        android:text="@string/module_store_app_name"/>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical">
            <Button
                android:id="@+id/store_down"
                android:layout_width="@dimen/dp_200"
                android:layout_height="@dimen/dp_60"
                android:textSize="@dimen/sp_24"
                android:text="@string/module_store_app_down"
                android:background="@drawable/module_store_selector_down"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.8">
            <TextView
                android:id="@+id/tv_result_detail"
                android:padding="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/module_store_selector_down"
                android:text="store detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detail"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10"
            android:layout_weight="2.2">
            <TextView
                android:id="@+id/tv_result_picture"
                android:padding="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:focusableInTouchMode="true"
                android:focusable="true"
                android:clickable="true"
                android:background="@drawable/module_store_selector_down"
                android:text="store detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detailstore detail"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
